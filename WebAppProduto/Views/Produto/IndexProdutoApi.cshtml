@model IEnumerable<WebAppProduto.Models.Produtos>

@{
    ViewData["Title"] = "IndexProdutoApi";
}

<h1>Produtos da Api</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                <img src="@item.imagem" width="100" height="100" asp-append-version="true">
            </td>
        </tr>
}
    </tbody>
</table>
